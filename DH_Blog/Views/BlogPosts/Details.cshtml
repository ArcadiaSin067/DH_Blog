@model DH_Blog.Models.BlogPost


<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @Html.Raw(Model.BlogPostBody)
            </div>
        </div>
    </div>
</article>
<hr style="border:2px solid black;" />

@if (User.Identity.IsAuthenticated)
{
<div id="addComment">
    @using (Html.BeginForm("Create", "Comments", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.Hidden("BlogPostId", Model.Id);

    <div class="col-md-8">
        @*@Html.Editor(model => model.c, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.BlogPostBody, "", new { @class = "text-danger" })*@
        @Html.TextArea("CommentBody", new { rows = 5, cols = 50, placeholder = "Add Comment" })
    </div>
        <button type="submit" class="btn allButtons">Add</button>
    }
</div>
}
<hr style="border:2px solid black;" />

@foreach (var comment in Model.Comments.OrderByDescending(c => c.Created))
{
    <div class="container" mt-3>
        <div class="media">
            <img src="~/IMGs/blank-user.png" class="align-self-start mr-3" style="width:75px;height:75px" />
            <div class="media-body">
                <div style="text-align:right">@comment.Created.ToString("MMM dd, y / hh:mm tt")</div>
                <h5>by @comment.Author.Email</h5>
                <br />
                @comment.CommentBody
                <hr />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script type="text/javascript">
                $(function () {
                    tinymce.init({
                        selector: '#EditorFor'
                    });
                });
    </script>
}